{
  "name": "@onlyjs/api",
  "version": "0.0.1",
  "config": {
    "envFile": "../../config/apps/api/.env"
  },
  "scripts": {
    "build": "dotenvx run --quiet -f ../../config/apps/api/.env -- bun ./src/core/build.ts",
    "emails:preview": "email dev --dir src/emails --port 3333",
    "knip": "knip --workspace apps/api",
    "dev": "dotenvx run --quiet -f ../../config/apps/api/.env -- nodemon",
    "serve": "dotenvx run --quiet -f ../../config/apps/api/.env -- bun run dev",
    "start": "dotenvx run --quiet -f ../../config/apps/api/.env -- bun ../../dist/apps/api/index.js",
    "prisma": "cd ../../packages/database && bun run prisma"
  },
  "type": "module",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.42",
    "@elysiajs/bearer": "1.3.0",
    "@elysiajs/cors": "1.3.3",
    "@elysiajs/cron": "1.3.0",
    "@elysiajs/static": "1.3.0",
    "@elysiajs/swagger": "1.3.1",
    "@mastra/core": "^0.20.0",
    "@onlyjs/db": "workspace:*",
    "@react-email/components": "^0.5.2",
    "better-auth": "^1.3.8",
    "elysia": "1.3.21",
    "http-errors": "^2.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "redis": "^5.8.2",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/http-errors": "^2.0.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "bun-plugin-dts": "0.3.0",
    "nodemon": "^3.1.10",
    "prisma-case-format": "^2.2.1",
    "prismabox": "^1.1.25",
    "react-email": "^4.2.8"
  },
  "main": "./src/index.ts",
  "private": true,
  "imports": {
    "#*": "./src/*"
  },
  "types": "./src/**/*.ts",
  "exports": {
    ".": "./src/index.ts",
    "./modules/*": "./src/modules/*"
  }
}
